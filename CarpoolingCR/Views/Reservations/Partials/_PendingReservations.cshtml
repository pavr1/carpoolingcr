@model CarpoolingCR.Objects.Responses.ReservationTransportationResponse

@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
<style>
    .checked {
        color: orange;
    }
</style>

<div id="yourreservations">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-11 col-xs-11">
            <input type="tel" class="search form-control" placeholder="Búsqueda" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-1 col-xs-1">
        </div>
    </div>
    <br />
    @{
        if (Model.PassengerReservations.Count == 0)
        {
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-8" style="text-align:center">
                    <small>¡No se encontraror reservaciones!</small>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                </div>
            </div>
        }
        else
        {
            <ul class="list" style="list-style:none">
                @{
                    var claims = (System.Security.Claims.ClaimsIdentity)User.Identity;
                    var value = string.Empty;
                    var obj = claims.FindFirst("CurrencyChar");
                    var currency = string.Empty;
                    var country = string.Empty;

                    if (obj != null)
                    {
                        currency = obj.Value;
                    }

                    obj = claims.FindFirst("CountryCode");

                    if (obj != null)
                    {
                        country = obj.Value;
                    }

                    foreach (var reservation in Model.PassengerReservations)
                    {
                        var from = reservation.Trip.FromTown.FullName;
                        var to = reservation.Trip.ToTown.FullName;
                        var route = reservation.Trip.Route.Name;

                        <li class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 panel panel-default" style="border-radius:10px">
                                <div class="row form-group">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                        <div class="" id="profile-container-small" data-toggle="tooltip" title="@reservation.Trip.ApplicationUser.FullName"><img id="profileImage" src="@Url.Content(reservation.Trip.ApplicationUser.Picture)" /></div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pull-right">
                                        @{
                                            var qualification = reservation.ApplicationUser.Stars;

                                            switch (qualification)
                                            {
                                                case 1:
                                                    <a href="#" data-toggle="tooltip" title="Muy Malo"><span id="p-star1" class="fa fa-star checked" data-toggle="Muy Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Malo"><span id="p-star2" class="fa fa-star" data-toggle="Muy Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Malo"><span id="p-star3" class="fa fa-star" data-toggle="Muy Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Malo"><span id="p-star4" class="fa fa-star" data-toggle="Muy Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Malo"><span id="p-star5" class="fa fa-star" data-toggle="Muy Malo"></span></a>
                                                    break;
                                                case 2:
                                                    <a href="#" data-toggle="tooltip" title="Malo"><span id="p-star1" class="fa fa-star checked" data-toggle="Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Malo"><span id="p-star2" class="fa fa-star checked" data-toggle="Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Malo"><span id="p-star3" class="fa fa-star" data-toggle="Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Malo"><span id="p-star4" class="fa fa-star" data-toggle="Malo"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Malo"><span id="p-star5" class="fa fa-star" data-toggle="Malo"></span></a>
                                                    break;
                                                case 3:
                                                    <a href="#" data-toggle="tooltip" title="Bueno"><span id="p-star1" class="fa fa-star checked" data-toggle="Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Bueno"><span id="p-star2" class="fa fa-star checked" data-toggle="Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Bueno"><span id="p-star3" class="fa fa-star checked" data-toggle="Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Bueno"><span id="p-star4" class="fa fa-star" data-toggle="Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Bueno"><span id="p-star5" class="fa fa-star" data-toggle="Bueno"></span></a>
                                                    break;
                                                case 4:
                                                    <a href="#" data-toggle="tooltip" title="Muy Bueno"><span id="p-star1" class="fa fa-star checked" data-toggle="Muy Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Bueno"><span id="p-star2" class="fa fa-star checked" data-toggle="Muy Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Bueno"><span id="p-star3" class="fa fa-star checked" data-toggle="Muy Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Bueno"><span id="p-star4" class="fa fa-star checked" data-toggle="Muy Bueno"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Muy Bueno"><span id="p-star5" class="fa fa-star" data-toggle="Muy Bueno"></span></a>
                                                    break;
                                                case 5:
                                                    <a href="#" data-toggle="tooltip" title="Excelente"><span id="p-star1" class="fa fa-star checked" data-toggle="Excelente"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Excelente"><span id="p-star2" class="fa fa-star checked" data-toggle="Excelente"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Excelente"><span id="p-star3" class="fa fa-star checked" data-toggle="Excelente"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Excelente"><span id="p-star4" class="fa fa-star checked" data-toggle="Excelente"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="Excelente"><span id="p-star5" class="fa fa-star checked" data-toggle="Excelente"></span></a>
                                                    break;
                                                case 0:
                                                    <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star1" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star2" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star3" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star4" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                    <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star5" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                    break;
                                            }
                                        }
                                        <br />
                                        @if (reservation.Status == CarpoolingCR.Utils.Enums.ReservationStatus.Accepted)
                                        {
                                            <small class="driver inline-block ">
                                                <a href="tel: @country @reservation.Trip.ApplicationUser.Phone1" style="color:blue"> @country @reservation.Trip.ApplicationUser.Phone1 </a>

                                                @if (!string.IsNullOrEmpty(reservation.Trip.ApplicationUser.Phone2))
                                                {
                                                    <a href="tel: @country @reservation.Trip.ApplicationUser.Phone2" style="color:blue"> @value @reservation.Trip.ApplicationUser.Phone2 </a>
                                                }

                                            </small><br />
                                        }
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label class="control-label from">Origen: </label><small>@from</small><br />
                                        <label class="control-label route">Ruta: </label><small>@route</small><br />
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <label class="control-label to">Destino: </label><small>@to</small><br />
                                        <label class="control-label route">Fecha: </label><small>@reservation.Trip.DateTime.ToString("dd/MM/yyyy hh:mm tt")</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @{
                                            var description = CarpoolingCR.Utils.EnumHelper<CarpoolingCR.Utils.Enums.ReservationStatus>.GetDisplayValue(reservation.Status);
                                            <small class="status"><b>&nbsp;&nbsp;Estado: </b>@description</small>
                                        }
                                        <br />
                                        <small class="spaces"><b>&nbsp;&nbsp;Espacios Solicitados: </b> @reservation.RequestedSpaces<br /></small>
                                        <small><b>&nbsp;&nbsp;Total: </b> @currency @Convert.ToDecimal(reservation.RequestedSpaces * reservation.Trip.Price)</small><br />
                                        @{
                                            if (reservation.Status != CarpoolingCR.Utils.Enums.ReservationStatus.Cancelled)
                                            {
                                                <input type="button" class="btn btn-danger btn-sm pull-right" value="Cancelar Reservación" onclick="ConfirmAction(@reservation.ReservationId, '@CarpoolingCR.Utils.Enums.ReservationStatus.Cancelled','cancelar esta reservación','Reservaciones', 'Cancelar', 'btn-danger', 'passenger')" />
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                }
            </ul>
        }
    }
</div>

<hr />

<div class="modal fade" id="confirmReservationsAction" tabindex="-1" role="dialog" aria-labelledby="confirmReservationModalLabel" aria-hidden="true">
    <form action="~/Reservations/ChangeReservationStatus/0" method="post">
        @Html.AntiForgeryToken()
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                        </button>
                        <h4 class="modal-title" id="confirmReservationModalLabel">TITLE</h4>
                    </div>
                    <div class="modal-body">
                        <input type="text" id="reservationId" name="reservationId" class="hidden" />
                        <input type="text" id="status" name="status" class="hidden" />
                        <input type="text" id="cancelledFrom" name="cancelledFrom" class="hidden" />
                        <p id="confirmText">CONFIRMATION TITLE?</p>
                        <div class="modal-footer">
                            <input type="button" class="btn btn-default" data-dismiss="modal" value="Salir" />
                            <input type="submit" id="modalButton" class="btn btn-danger" value="Eliminar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="reservationChatModal" tabindex="-1" role="dialog" aria-labelledby="reservationChatModalLabel" aria-hidden="true">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="chatContainer">
            @Html.Partial("~/Views/ChattingMessages/_Index.cshtml", new CarpoolingCR.Objects.Responses.ChatMessageResponse { Messages = new List<CarpoolingCR.Models.ChattingMessage>() })
        </div>
    </div>
</div>

<script language="javascript">
    var options = {
        valueNames: ['fromto', 'date', 'price', 'driver', 'spaces', 'status']
    };

    var reservationCount = @Model.PassengerReservations.Count;

    if (reservationCount > 0) {
        var userList = new List('yourreservations', options);
    }

    function ConfirmAction(reservationId, status, detail, title, btnVal, btnClass, cancelledFrom) {
        $('#confirmReservationModalLabel').html(title);
        $('#confirmText').html('¿Está seguro que deseas ' + detail + ' ?');
        $('#reservationId').val(reservationId);
        $('#status').val(status);

        $('#modalButton').removeClass('btn-danger');
        $('#modalButton').removeClass('btn-info');

        $('#modalButton').html(btnVal);
        $('#modalButton').addClass(btnClass);
        $('#cancelledFrom').val(cancelledFrom);

        $("#confirmReservationsAction").modal();
    }

    function OpenChat(reservationId, fromName, toName) {
        $.get('/ChattingMessages/Index', { reservationId: reservationId },
            function (data) {
                $('#chatContainer').html(data);
            });

        $("#reservationChatModal").modal();
        $('#chatMessageContainer').scrollTop($('#chatMessageContainer')[0].scrollHeight);
    }

    $.connection.hub.start();
    $.connection.hub.qs = "myInfo=12345";
    var chat = $.connection.SignalHandlerHub;

    function SendMessage(reservationId, from) {
        var message = $('#messageChatText').val();

        $.post('@Url.Action("Create","ChattingMessages")', { reservationId: reservationId, userId: from, message: message },
            function (data) {
                $('#chatContainer').html(data);

                $('#chatMessageContainer').scrollTop($('#chatMessageContainer')[0].scrollHeight);
            });

    }

//$(document).ready(function () {
//    $('[data-toggle="tooltip"]').tooltip();
//});
</script>
