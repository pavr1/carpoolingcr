@model  CarpoolingCR.Objects.Responses.TripIndexResponse

@{
    /**/

    ViewBag.Title = "Index";
}
<br />
<div id="trips">
    <div class="row form-group" style="text-align:center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h5 class="pull-left">Viajes: @Model.Trips.Count</h5>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="form-group has-feedback has-search">
                <span class="glyphicon glyphicon-search form-control-feedback"></span>
                <input type="text" class="form-control search" placeholder="Búsqueda">
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            @{
                if (Model.ReachedMaxCount)
                {
                    <small class="pull-right text-warning">¡Cantidad máxima de viajes alcanzada! <a href="#" data-toggle="tooltip" class="btn btn-sm btn-info" style="border-radius:10px" title="¡Sólo pueden haber 2 viajes activos por conductor simultáneamente!">?</a></small>
                }
                else
                {
                    if (!Model.VehicleInfoRegistered)
                    {
                        <small class="pull-right text-warning hidden-xs">¡Información del vehículo requerida! <a href="#" data-toggle="tooltip" class="btn btn-sm btn-info" style="border-radius:10px" title="Para crear viajes debes completar la información de tu vehículo en tu perfíl">?</a></small>
                        <small class="text-warning visible-xs"><br />¡Información del vehículo requerida! <a href="#" data-toggle="tooltip" class="btn btn-sm btn-info" style="border-radius:10px" title="Para crear viajes debes completar la información de tu vehículo en tu perfíl">?</a></small>
                    }
                    else
                    {
                        <a class="btn btn-info btn-sm btn-block custom-spin-button pull-right" href="~/Trips/Create" data-loading-text="<i class='fa fa-circle-o-notch fa-spin pull-right'></i> Crear Viaje" style="width:150px">Crear Viaje</a>
                    }
                }
            }
        </div>
    </div>
    @{
        if (Model.Trips.Count == 0)
        {
            <div class="row form-group">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style="text-align:center">
                    <small class="center-block">¡No hay viajes registrados!</small>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                </div>
            </div>
        }
        else
        {
            var index = 1;
            var claims = (System.Security.Claims.ClaimsIdentity)User.Identity;
            var value = string.Empty;
            var obj = claims.FindFirst("CurrencyChar");
            var currency = string.Empty;
            var country = string.Empty;

            if (obj != null)
            {
                currency = obj.Value;
            }

            obj = claims.FindFirst("CountryCode");

            if (obj != null)
            {
                country = obj.Value;
            }

            <ul class="list" style="list-style:none; padding-left:0px">
                @{
                    foreach (var trip in Model.Trips)
                    {
                        var from = trip.FromTown.FullName;
                        var to = trip.ToTown.FullName;
                        var route = trip.Route;

                        var evenOdd = index % 2;
                        var background = (evenOdd == 0) ? "azure" : "white";

                        index++;

                        <li>
                            <div class="row form-group" style="padding-left:15px">
                                <div class="panel panel-default" style="border-radius:10px; padding-top: 20px;">
                                    <div class="row form-group" style="padding-left:20px; padding-right:20px">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                                            <span class="fas fa-calendar-alt"></span><small class="date"> <b>@trip.LocalDateTime.ToString("dddd dd 'de' MMMM 'del' yyyy")</b></small><br />

                                            <span class="fas fa-clock"></span>&nbsp;<small>@trip.LocalDateTime.ToString("hh:mm tt")</small>&nbsp;&nbsp;<br class="visible-xs" /><span class="fas fa-map-marker-alt">&nbsp;</span><small class="from">@from</small><br />
                                            <span class="fas fa-clock"></span>&nbsp;<small>@trip.LocalArrivalDateTime.ToString("hh:mm tt")</small>&nbsp;&nbsp;<br class="visible-xs" /><span class="fas fa-map-marker-alt">&nbsp;</span><small class="to">@to</small><br />
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4" style="text-align:center">
                                            @{
                                                if (Model.IsAdmin)
                                                {
                                                    <div class="pull-right" id="profile-container-small" data-toggle="tooltip" style="margin-right:10px" title="Conductor"><img id="profileImage" src="@Url.Content(trip.ApplicationUser.Picture)" /></div><br /><br /><br />
                                                    <small class="pull-right name">@trip.ApplicationUser.FullName</small><br>
                                                }
                                            }
                                        </div>
                                        <div class="row form-group" style="padding-left:15px; padding-right:0px">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <b><span class="fas fa-route"></span>Ruta: </b><small class="route">@route.Name</small><br />
                                                <b><span class="fas fa-road">&nbsp;</span>Distancia: </b><small>@trip.AproxDistance km</small><br />
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <small class="price"><b><span class="fas fa-money-bill-alt">&nbsp;</span>Cuota: </b> @currency @trip.Price</small><br />
                                                <small class="spaces"><b><span class="fas fa-car-side">&nbsp;</span>Espacios: </b>  @trip.AvailableSpaces</small><br />
                                            </div>
                                        </div>
                                        <div class="row form-group" style="padding-left:0px">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="row form-group btn-group center-block" style="padding-left:0px; padding-right:0px; margin-bottom:0px">
                                                    @{
                                                        if (trip.AllowPets)
                                                        {
                                                            <div id="pet" class="btn btn-info panel panel-default active" data-toggle="button" onclick="return false" aria-pressed="true" style="border-radius:10px 0px 0px 10px; pointer-events:none; width:100px">
                                                                <span class="fas fa-dog">&nbsp;</span>&nbsp;<span id="check-pet" class="fas fa-check-circle">&nbsp;</span><br /><small class="control-label" style="text-align:left">Mascotas </small>
                                                                <input type="text" id="ck-pet" name="ck-pet" style="display:none" />
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div id="pet" class="btn btn-info panel panel-default" data-toggle="button" aria-pressed="false" autocomplete="off" style="border-radius:10px 0px 0px 10px; pointer-events:none; width:100px">
                                                                <span class="fas fa-dog">&nbsp;</span>&nbsp;<span id="check-pet" class="fas fa-check-circle hidden">&nbsp;</span><br /><small class="control-label" style="text-align:left">Mascotas </small>
                                                                <input type="text" id="ck-pet" name="ck-pet" style="display:none" />
                                                            </div>
                                                        }

                                                        if (trip.AllowLuggage)
                                                        {
                                                            <div id="luggage" class="btn btn-info col-lg-4 panel panel-default active" data-toggle="button" aria-pressed="true" autocomplete="off" style="border-radius:0px;pointer-events:none; width:100px">
                                                                <span class="fas fa-suitcase-rolling">&nbsp;</span>&nbsp;<span id="check-luggage" class="fas fa-check-circle"></span><br /><small class="control-label" style="text-align:left">Equipaje </small>&nbsp;
                                                                <input type="text" id="ck-luggage" name="ck-luggage" style="display:none" />
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div id="luggage" class="btn btn-info col-lg-4 panel panel-default allow-checkboxes" data-toggle="button" aria-pressed="false" autocomplete="off" style="border-radius:0px;pointer-events:none; width:100px">
