                                                        <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star1" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                        <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star2" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                        <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star3" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                        <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star4" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                        <a href="#" data-toggle="tooltip" title="¡Usuario no calificado!"><span id="p-star5" class="fa fa-star" data-toggle="¡Usuario no calificado!"></span></a>
                                                        break;
                                                }
                                            }
                                            <br />
                                            @if (reservation.Status == CarpoolingCR.Utils.Enums.ReservationStatus.Accepted)
                                            {
                                                var claims = (System.Security.Claims.ClaimsIdentity)User.Identity;
                                                var value = string.Empty;
                                                var obj = claims.FindFirst("CountryCode");

                                                if (obj != null)
                                                {
                                                    value = obj.Value;
                                                }

                                                <small class="driver inline-block ">
                                                    <a href="tel: @value @reservation.Trip.ApplicationUser.Phone1" style="color:blue"> @value @reservation.Trip.ApplicationUser.Phone1 </a>

                                                    @if (!string.IsNullOrEmpty(reservation.Trip.ApplicationUser.Phone2))
                                                    {
                                                        <a href="tel: @value @reservation.Trip.ApplicationUser.Phone2" style="color:blue"> @value @reservation.Trip.ApplicationUser.Phone2 </a>
                                                    }

                                                </small><br />
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <small class="control-label route"><b><span class="fas fa-calendar-alt">&nbsp;</span>Fecha: </b></small><small>@reservation.Trip.DateTime.ToString("dd/MM/yyyy hh:mm tt")</small>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <small class="control-label from"><b><span class="fas fa-map-marker-alt">&nbsp;</span>Origen: </b></small><small>@from</small><br />
                                            <small class="control-label to"><b><span class="fas fa-map-marker-alt">&nbsp;</span>Destino: </b></small><small>@to</small><br />
                                            <small class="control-label route"><b><span class="fas fa-route">&nbsp;</span>Ruta: </b></small><small>@route</small><br />
                                            @{
                                                var description = CarpoolingCR.Utils.EnumHelper<CarpoolingCR.Utils.Enums.ReservationStatus>.GetDisplayValue(reservation.Status);

                                                if (reservation.Status == CarpoolingCR.Utils.Enums.ReservationStatus.Rejected)
                                                {
                                                    <small class="status text-danger"><b><span class="fas fa-shield-alt">&nbsp;</span>Estado: </b>@description</small>
                                                }
                                                else
                                                {
                                                    <small class="status"><b><span class="fas fa-shield-alt">&nbsp;</span>Estado: </b>@description</small>
                                                }
                                            }
                                            <br />
                                            @{
                                                if (reservation.Status == CarpoolingCR.Utils.Enums.ReservationStatus.Rejected)
                                                {
                                                    <small><b><span class="fas fa-money-bill-alt">&nbsp;</span>Total: </b> ₡ @Convert.ToDecimal(0).ToString("N2")</small><br />
                                                }
                                                else
                                                {
                                                    <small><b><span class="fas fa-money-bill-alt">&nbsp;</span>Total: </b> ₡ @selectedSeatsTotalPrice</small><br />
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="height:300px">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">

                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                                            <table border="0" style="padding:0px;margin:0px;position:relative; top:-70px; left:-10px;">
                                                <tr style="height:50px">
                                                    <td colspan="3" style="height:50px">
                                                        <div style="height: 15px;width: 40px;background-color: yellow;border-radius: 50%;position:relative; top:75px; left:20px; z-index:10; -ms-transform: rotate(-20deg); -webkit-transform: rotate(-20deg); transform: rotate(-20deg);"></div>
                                                        <div style="height: 15px;width: 40px;background-color: yellow;border-radius: 50%;position:relative; top:60px; left:123px; z-index:10; -ms-transform: rotate(20deg); -webkit-transform: rotate(20deg); transform: rotate(20deg);"></div>
                                                        <div style="border-radius:50px 50px 0px 0px; background-color:#004a93; width:100%; height:100px;position:relative;top:37px; left:0px;"></div>
                                                        <div class="center-block" style="border-radius:50px 50px 0px 0px; background-color:gainsboro; width:100%; height:35px;position:relative; width:90%"></div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="background-color:#004a93">
                                                        <div class="seat" style="padding-left:10px; padding-right:0px">
                                                            <input type="checkbox" disabled id="driver-seat" />
                                                            <label for="driver-seat">Conductor</label>
                                                        </div>
                                                    </td>
                                                    <td style="background-color:#004a93"></td>
                                                    <td style="background-color:#004a93">
                                                        <div class="seat" style="padding-left:0px; padding-right:10px;cursor:not-allowed !important">
                                                            @{
                                                                if (spacesSelected.Contains("modelPriceCopilot"))
                                                                {
                                                                    <input type="checkbox" id="copilot-seat" class="seats" checked onclick="return false" />
                                                                    <label for="copilot-seat" style="color:darkblue">&#10004;</label>
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="copilot-seat" disabled class="seats" />
                                                                    <label for="copilot-seat" style="color:darkblue"></label>
                                                                }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="background-color:#004a93">
                                                        <div class="seat" style="padding-left:10px; padding-right:0px">
                                                            @{
                                                                if (spacesSelected.Contains("modelPriceLeft"))
                                                                {
                                                                    <input type="checkbox" id="back-left-seat" class="seats" checked onclick="return false" />
                                                                    <label for="back-left-seat" style="color:darkblue">&#10004;</label>
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="back-left-seat" disabled class="seats" />
                                                                    <label for="back-left-seat" style="color:darkblue"></label>
                                                                }
                                                            }
                                                        </div>
                                                    </td>
                                                    <td style="background-color:#004a93">
                                                        <div class="seat" style="padding-left:0px; padding-right:0px">
                                                            @{
                                                                if (spacesSelected.Contains("modelPriceMiddle"))
                                                                {
                                                                    <input type="checkbox" id="back-middle-seat" class="seats" checked onclick="return false" />
                                                                    <label for="back-middle-seat" style="color:darkblue">&#10004;</label>
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="back-middle-seat" disabled class="seats" />
                                                                    <label for="back-middle-seat" style="color:darkblue"></label>
                                                                }
                                                            }
                                                        </div>
                                                    </td>
                                                    <td style="background-color:#004a93">
                                                        <div class="seat" style="padding-left:0px; padding-right:10px">
                                                            @{
                                                                if (spacesSelected.Contains("modelPriceRight"))
                                                                {
                                                                    <input type="checkbox" id="back-right-seat" class="seats" checked onclick="return false" />
                                                                    <label for="back-right-seat" style="color:darkblue">&#10004;</label>
                                                                }
                                                                else
                                                                {
                                                                    <input type="checkbox" id="back-right-seat" disabled class="seats" />
                                                                    <label for="back-right-seat" style="color:darkblue"></label>
                                                                }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="3">
                                                        <div class="center-block" style="border-radius:0px 0px 25px 25px; background-color:#004a93; width:100%; height:60px;"></div>
                                                        <div class="center-block" style="border-radius:0px 0px 50px 50px; background-color:gainsboro; width:90%; height:20px;position:relative;top:-60px; left:0px;"></div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    }
</div>

<div class="modal fade" id="confirmReservationsAction" tabindex="-1" role="dialog" aria-labelledby="confirmReservationModalLabel" aria-hidden="true">
    <form action="~/Reservations/ChangeReservationStatus/0" method="post">
        @Html.AntiForgeryToken()
        <div class="vertical-alignment-helper">
            <div class="modal-dialog vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                        </button>
                        <h4 class="modal-title" id="confirmReservationModalLabel">TITLE</h4>
                    </div>
                    <div class="modal-body">
                        <input type="text" id="reservationId" name="reservationId" class="hidden" />
                        <input type="text" id="status" name="status" class="hidden" />
                        <input type="text" id="cancelledFrom" name="cancelledFrom" class="hidden" />
                        <p id="confirmText">CONFIRMATION TITLE?</p>
                        <div class="modal-footer">
                            <input type="button" class="btn btn-default" data-dismiss="modal" value="Salir" />
                            <input type="submit" id="modalButton" class="btn btn-danger" value="Eliminar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="reservationChatModal" tabindex="-1" role="dialog" aria-labelledby="reservationChatModalLabel" aria-hidden="true">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="chatContainer">
            @Html.Partial("~/Views/ChattingMessages/_Index.cshtml", new CarpoolingCR.Objects.Responses.ChatMessageResponse { Messages = new List<CarpoolingCR.Models.ChattingMessage>() })
        </div>
    </div>
</div>

<script language="javascript">
    var options = {
        valueNames: ['fromto', 'date', 'price', 'driver', 'spaces', 'status']
    };

    var reservationCount = @Model.PassengerReservations.Count;

    if (reservationCount > 0) {
        var userList = new List('yourreservations', options);
    }

    function ConfirmAction(reservationId, status, detail, title, btnVal, btnClass, cancelledFrom) {
        $('#confirmReservationModalLabel').html(title);
        $('#confirmText').html('¿Está seguro que deseas ' + detail + ' ?');
        $('#reservationId').val(reservationId);
        $('#status').val(status);

        $('#modalButton').removeClass('btn-danger');
        $('#modalButton').removeClass('btn-info');

        $('#modalButton').val(btnVal);
        $('#modalButton').addClass(btnClass);
        $('#cancelledFrom').val(cancelledFrom);

        $("#confirmReservationsAction").modal();
    }

    function OpenChat(reservationId, fromName, toName) {
        $.get('/ChattingMessages/Index', { reservationId: reservationId },
            function (data) {
                $('#chatContainer').html(data);
            });

        $("#reservationChatModal").modal();
        $('#chatMessageContainer').scrollTop($('#chatMessageContainer')[0].scrollHeight);
    }

    $.connection.hub.start();
    $.connection.hub.qs = "myInfo=12345";
    var chat = $.connection.SignalHandlerHub;

    function SendMessage(reservationId, from) {
        var message = $('#messageChatText').val();

        $.post('@Url.Action("Create","ChattingMessages")', { reservationId: reservationId, userId: from, message: message },
            function (data) {
                $('#chatContainer').html(data);

                $('#chatMessageContainer').scrollTop($('#chatMessageContainer')[0].scrollHeight);
            });

    }

//$(document).ready(function () {
//    $('[data-toggle="tooltip"]').tooltip();
//});
</script>
