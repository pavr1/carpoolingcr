@model CarpoolingCR.Objects.Responses.CancelNotificationResponse

@{
    ViewBag.Title = "Notificaciones";
}

@{
    if (Model.Notifications.ToList().Count == 0)
    { <div class="row form-group" style="text-align:center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                ¡No se encontraron viajes!
            </div>
        </div>
    }
    else
    {
        foreach (var notification in Model.Notifications)
        {
            var from = notification.FromTown.FullName;
            var to = notification.ToTown.FullName;

            <div class="row container">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 panel panel-default" style="border-radius:20px; padding-right:0px">
                    <input type="button" class="btn btn-danger btn-sm pull-right" style="width:150px" value="Cancelar" onclick="PrepareCancelation('@notification.NotificationRequestId')" />
                    <div class="row form-group">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label from">Origen: </label><small>@from</small><br />
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label to">Destino: </label><small>@to</small><br />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label route">Fecha: </label><small>@notification.RequestedFromDateTime.ToShortDateString()</small>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <label class="control-label route">Entre: </label><small>@notification.RequestedFromDateTime.ToString("hh:mm tt")</small> <label class="control-label route">y </label> <small>@notification.RequestedToDateTime.ToString("hh:mm tt")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

<div class="modal fade" id="cancelNotRequestModal" tabindex="-1" role="dialog" aria-labelledby="cancelNotRequestModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <input type="text" id="selected-notification-id" name="selected-notification-id" class="hidden" />
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="dayTripModalLabel">Cancelación de notificaciones</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <small>¡Por favor confirme que desea cancelar esta notificación!</small>
                        </div>
                    </div>
                </div>
                <div id="btnsContainer" class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cerrar" />
                    <input type="button" class="btn btn-danger" onclick="CancelNotification()" value="Cancelar" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function PrepareCancelation(notificationId) {
        console.log('Setting selected notification id: ' + notificationId);

        $('#selected-notification-id').val(notificationId);
        $('#cancelNotRequestModal').modal();
    }

    function CancelNotification() {
        var notificationId = $('#selected-notification-id').val();

        $.post('/NotificationRequests/CancelNotification', { notificationRequestId: notificationId },
            function (data) {
                console.log(data);

                var json = JSON.parse(data);

                $('#notification-request-index-container').html(json.Html);

                DisplayGrowlMessage(data.Message);
            });
    }
</script>
