@model CarpoolingCR.Objects.Responses.TownCreateResponse

@{
    ViewBag.Title = "Create";
}

<h2>Localidades</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Town.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Town.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Town.Name, "", new { @class = "text-danger" })
                @{
                    if (Model.UserType != CarpoolingCR.Utils.Enums.UserType.Administrador)
                    {
                        <br />
                        <p class="label-warning" style="border-radius:25px">&nbsp;&nbsp;La creación de la localidad queda pendiente a aprobación por el administrador del sitio.</p>
                    }

                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("<<", "Index", new { }, new { @class = "btn btn-primary" }) <input type="submit" value="Crear" class="btn btn-success pull-right" />
            </div>
        </div>
    </div>
}