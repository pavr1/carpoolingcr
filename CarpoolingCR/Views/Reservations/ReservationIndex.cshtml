</div>

<div id="yourreservations">
    <div class="row form-group">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <input type="text" class="search form-control small" placeholder="Búsqueda">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <a class="btn btn-info btn-sm btn-block custom-spin-button pull-right" href="@Url.Action("CreateReservation", "Reservations")" data-loading-text="<i class='fa fa-circle-o-notch fa-spin pull-right'></i> Reservar" style="width:150px">Reservar</a>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <b class="pull-right">Reservaciones: @Model.PassengerReservations.Count</b>
        </div>
    </div>
    <hr />
    @{
        if (Model.PassengerReservations.Count == 0)
        {
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-8" style="text-align:center">
                    <small>¡No hay reservaciones registradas!</small>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                </div>
            </div>
        }
        else
        {
            <ul class="list" style="list-style:none; padding:0px">
                @foreach (var reservation in Model.PassengerReservations)
                {
                    var from = reservation.Trip.FromTown.FullName;
                    var to = reservation.Trip.ToTown.FullName;
                    var route = reservation.Trip.Route.Name;
                    var spacesSelected = reservation.SpacesSelected;
                    var selectedSeatsTotalPrice = reservation.SelectedSeatsTotalPrice;

                    <li>
                        <div class="panel panel-default" style="border-radius:10px; padding:30px">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="height:300px">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            @{
                                                if (reservation.Status == CarpoolingCR.Utils.Enums.ReservationStatus.Rejected)
                                                {
                                                    <small class="text-danger">
                                                        ¡Lo sentimos, tu reservación ha sido rechazada por el conductor! <br /> Podés proceder a cancelar esta reserva.
                                                    </small>
                                                    <br />
                                                }

                                                if (reservation.Status != CarpoolingCR.Utils.Enums.ReservationStatus.Cancelled)
                                                {
                                                    <input type="button" class="btn btn-danger btn-sm pull-right" value="Cancelar Reservación" onclick="ConfirmAction(@reservation.ReservationId, '@CarpoolingCR.Utils.Enums.ReservationStatus.Cancelled','cancelar esta reservación','Reservaciones', 'Cancelar', 'btn-danger', 'passenger')" />
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                            <div class="" id="profile-container-small" data-toggle="tooltip" title="@reservation.Trip.ApplicationUser.FullName"><img id="profileImage" src="@Url.Content(reservation.Trip.ApplicationUser.Picture)" /></div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="text-align:right">
                                            @{
