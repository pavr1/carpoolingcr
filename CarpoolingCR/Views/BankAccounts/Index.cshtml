@model IEnumerable<CarpoolingCR.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

@{
    if (Model.Count() == 0)
    {
        <div class="row form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center; display:inline">
                <small>¡No hay información bancaria registrada!</small><br />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <a class="btn btn-info btn-sm btn-block custom-spin-button pull-right" href="~/BankAccounts/Create" data-loading-text="<i class='fa fa-circle-o-notch fa-spin pull-right'></i> Ingresar información bancaria" style="width:200px">Ingresar información bancaria</a>
            </div>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="row form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label">Banco: </label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <small>@item.Bank.BankName</small>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label">Cuenta Ahorros: </label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <small>@item.SavingsAccount</small>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <label class="control-label">Sinpe: </label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <small>@item.Sinpe</small>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <a class="btn btn-info btn-sm btn-block custom-spin-button center-block" href="~/BankAccounts/Edit/@item.BankAccountId" data-loading-text="<i class='fa fa-circle-o-notch fa-spin pull-right'></i> Editar Cuenta" style="width:150px">Editar Cuenta</a>
                </div>
            </div>
        }
    }
}