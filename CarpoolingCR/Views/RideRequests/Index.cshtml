@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayPart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestedSpaces)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RideRequestId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RideRequestId }) |
