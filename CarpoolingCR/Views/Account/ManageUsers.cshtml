@model ICollection<CarpoolingCR.Models.ApplicationUser>

@{
    ViewBag.Title = "ManageUsers";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<br />
<div id="manage-users-search">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-11 col-xs-11">
            <input type="text" class="search form-control" placeholder="Usuarios" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-1 col-xs-1">

        </div>
    </div>
    <br />
    <div class="row form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <b class="pull-right">Usuarios: @Model.Count</b>
        </div>
    </div>
    <ul class="list" style="list-style:none;padding:0px">
        @{
            foreach (var item in Model)
            {
                <li>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <label class="control-label passenger"><span class="fas fa-user">&nbsp;</span>@item.Name @item.LastName</label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <small class="status">
                                @{
                                    var description = CarpoolingCR.Utils.EnumHelper<CarpoolingCR.Utils.Enums.ProfileStatus>.GetDisplayValue(item.Status);
                                    <b><span class="fas fa-shield-alt">&nbsp;</span>Estado:</b> @description
                                }
                            </small>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 hidden-xs">
                            <small class="email"><b><span class="fas fa-check-circle">&nbsp;</span>Confirmación: </b></small><br />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 country">
                            <small><span class="fas fa-globe-americas">&nbsp;</span>@item.Country.Name</small>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <small class="email"><b><span class="fas fa-envelope">&nbsp;</span>Correo:</b> @item.Email</small>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 hidden-xs">
                            <span class="fas fa-id-card">&nbsp;</span><input type="checkbox" checked="@item.IsUserIdentificationVerified" disabled />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            @{
                                var claims = (System.Security.Claims.ClaimsIdentity)User.Identity;
                                var value = string.Empty;
                                var obj = claims.FindFirst("CountryCode");

                                if (obj != null)
                                {
                                    value = obj.Value;
                                }

                                <small class="phones">
                                    <b><span class="fas fa-phone-square-alt">&nbsp;</span>Contacto: </b><a href="tel: @value @item.Phone1" style="color:blue"> @value @item.Phone1 </a>

                                    <br />
                                    @if (!string.IsNullOrEmpty(item.Phone2))
                                    {
                                        <br />
                                        <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                        <a href="tel: @value @item.Phone2" style="color:blue"> @value @item.Phone2 </a>
                                    }
                                </small>
                            }
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <small class="usertype"><b><span class="fas fa-user-shield">&nbsp;</span>Tipo de Usuario:</b> @item.UserType</small>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 hidden-xs">
                            <span class="fas fa-mobile-alt">&nbsp;</span><input type="checkbox" checked="@item.IsPhoneVerified" disabled /><br />
                            <span class="fas fa-envelope">&nbsp;</span><input type="checkbox" checked="@item.EmailConfirmed" disabled />

                            @Html.ActionLink("Eliminar", "EditUser", new { id = item.Id }, new { @class = "btn btn-danger btn-sm pull-right", @disabled = "disabled" })
                            @Html.ActionLink("Editar", "DeleteUser", new { id = item.Id }, new { @class = "btn btn-info btn-sm pull-right" })
                        </div>
                        <div class="visible-xs col-xs-12">
                            <small class="email"><b><span class="fas fa-check-circle">&nbsp;</span>Confirmación: </b></small><br />
                            &nbsp;&nbsp;&nbsp;<span class="fas fa-id-card">&nbsp;</span><input type="checkbox" checked="@item.IsUserIdentificationVerified" disabled /><br />
                            &nbsp;&nbsp;&nbsp;<span class="fas fa-mobile-alt">&nbsp;</span><input type="checkbox" checked="@item.IsPhoneVerified" disabled /><br />
                            &nbsp;&nbsp;&nbsp;<span class="fas fa-envelope">&nbsp;</span><input type="checkbox" checked="@item.EmailConfirmed" disabled />

                            @Html.ActionLink("Eliminar", "EditUser", new { id = item.Id }, new { @class = "btn btn-danger btn-sm pull-right", @disabled = "disabled" })
                            @Html.ActionLink("Editar", "DeleteUser", new { id = item.Id }, new { @class = "btn btn-info btn-sm pull-right" })
                        </div>
                    </div>
                    <hr />
                </li>
            }
        }
    </ul>
</div>

<script language="javascript">
    var options = {
        valueNames: ['passenger', 'status', 'country', 'email', 'usertype', 'phones',]
    };

    var userList = new List('manage-users-search', options);
</script>
